<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFE9CE"
    tools:context=".Tela_cadastro">

    <Button
        android:id="@+id/buttonCadastroVoltar"
        android:layout_width="392dp"
        android:layout_height="54dp"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextSenhaCadastro"
        android:layout_width="290dp"
        android:layout_height="54dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="Digite sua senha aqui"
        android:inputType="textPersonName|textWebPassword"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmailCadastro"
        tools:textColorHint="@color/black" />

    <TextView
        android:id="@+id/textViewTituloCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="@string/TituloCadastro"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextEmailCadastro"
        android:layout_width="290dp"
        android:layout_height="54dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="Digite seu email aqui"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTituloCadastro"
        tools:textColorHint="@color/black" />

    <Button
        android:id="@+id/buttonCadastroEnviar"
        android:layout_width="290dp"
        android:layout_height="54dp"
        android:onClick="@string/MÃ©todoCadastro"
        android:text="Cadastrar"
        app:layout_constraintBottom_toTopOf="@+id/buttonCadastroVoltar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSenhaCadastro"
        app:layout_constraintVertical_bias="0.737" />

</androidx.constraintlayout.widget.ConstraintLayout>