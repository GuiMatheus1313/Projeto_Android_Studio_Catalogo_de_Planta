<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFE9CE"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/TextView_tituloCarrosel"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="@string/PrimeiroTituloMain"
            android:textColor="#000000"
            android:textSize="24sp" />

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/Caroussel1Main"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_marginTop="20dp"
            app:fillColor="#fff"
            app:pageColor="#000"
            app:slideInterval="3000" />



        <Button
            android:id="@+id/button_perfilmenu"
            android:layout_width="117dp"
            android:layout_height="75dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/botaoformato_perfil"
            android:text="@string/BotaoPerfil" />

        <Button
            android:id="@+id/button"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:text="Button" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>